<!--EJS file that shows the edit screen for the user where existing rentals or
properties show the information to be able to edit it.-->
<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Rental</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/locations/<%=rental._id%>?_method=PUT" method="POST" novalidate class="validated-form"
              enctype="multipart/form-data">
            <!--Title-->
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="rental[title]"
                       value="<%=rental.title%>" required>
                <div class="valid-feedback">Valid</div>
            </div>

            <!--Location-->
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="rental[location]" value="<%=rental.location%>" required>
                <div class="valid-feedback">Valid</div>
            </div>

            <!--Price-->
            <div class="mb-3">
                <label class="form-label" for="Price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label"
                           name="rental[price]" value="<%=rental.price%>" required>
                    <div class="valid-feedback">Valid</div>
                </div>
            </div>

            <!--Description-->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="rental[description]" required><%= rental.description%></textarea>
                <div class="valid-feedback">Valid</div>
            </div>

            <!--Image-->
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Upload Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>

            <div class="mb-3">
                <% rental.images.forEach(function(img, i) {%>
              <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete</label>
                <% })%>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Property</button>
            </div>
        </form>
        <a href="/locations/<%= rental._id%>">Back to Property</a>
    </div>
</div>
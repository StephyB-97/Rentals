<!--Index page to add information -->

<% layout('layouts/boilerplate')%>
<!--Cluster map-->
<div id="cluster-map"></div>

<h1>Available Rentals</h1>

<!--Show the rentals (hotels, apartments, houses)-->

    <% for (let rental of rentals) { %>
     <div class="card mb-3">
         <div class="row">
             <div class="col-md-4">
                 <%if(rental.images.length) {%>
                 <img class="img-fluid" alt="" src="<%=rental.images[0].url%>" crossorigin>
                 <%} else {%>
                 <img class="img-fluid" alt="" src="https://res.cloudinary.com/dbaf6sthf/image/upload/v1679090752/Rentals/x7mnzzm52wmjm3chxqxr.png" crossorigin>
                 <%}%>
             </div>
             <div class="col-md-8">
                 <div class="card-body">
                     <h5 class="card-title">
                         <%=rental.title%>
                     </h5>


                     <p class="card-text"><%= rental.description%></p>
                     <p class="card-text">
                         <small class="text-muted"><%=rental.location%></small>
                     </p>
                     <a class="btn btn-primary" href="/locations/<%=rental._id%>"> View <%=rental.title%></a>
                 </div>
             </div>
         </div>
     </div>
    <% } %>

<script>
    const mapToken= '<%-process.env.MAPBOX_TOKEN%>';
    const rentals= {features: <%-JSON.stringify(rentals)%>}
</script>
<script src="/javascripts/clusterMap.js"></script>